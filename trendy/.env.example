# Environment Configuration
# Copy this file to .env for development, .env.staging for staging, and .env.production for production

# API Configuration
API_BASE_URL=https://api.trendyapp.com
API_VERSION=v1

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Agora Configuration (Video Calling)
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# AdMob Configuration
ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
ADMOB_APP_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx~yyyyyyyyyy
ADMOB_BANNER_AD_UNIT_ID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy
ADMOB_INTERSTITIAL_AD_UNIT_ID=ca-app-pub-xxxxxxxxxxxxxxxx/yyyyyyyyyy

# Facebook Ads
FACEBOOK_PLACEMENT_ID=your_facebook_placement_id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Social Configuration
DYNAMIC_LINK_DOMAIN=trendyapp.page.link
TWITTER_API_KEY=your_twitter_api_key
INSTAGRAM_APP_ID=your_instagram_app_id

# Support Configuration
SUPPORT_EMAIL=support@trendyapp.com
PRIVACY_POLICY_URL=https://trendyapp.com/privacy
TERMS_OF_SERVICE_URL=https://trendyapp.com/terms
